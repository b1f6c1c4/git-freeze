git clone --branch example-repo2 --recurse-submodules https://github.com/b1f6c1c4/git-get repo

R="$(cd repo && git-freeze --tree)"

[ "$R" = "01d66d95cb0593eed60e6bd2610720b0665d5ffd" ]

[ -f repo/.gitmodules ]
[ -f repo/sub/.git ]
